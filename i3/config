# my fix for bomi
bindsym $mod+m          workspace $WS3, layout tabbed, exec $term -e "mpv $clip"
bindsym $mod+Shift+m    workspace $WS3, layout tabbed, exec $term -e "mpv --profile=low $clip"

# Resize
bindsym $mod+Shift+y    resize shrink   width   10 px or 10 ppt
bindsym $mod+Shift+u    resize shrink   height  10 px or 10 ppt
bindsym $mod+Shift+i    resize grow     height  10 px or 10 ppt
bindsym $mod+Shift+o    resize grow     width   10 px or 10 ppt

# brightness
bindsym XF86MonBrightnessDown       $exec xbacklight -dec 10
bindsym XF86MonBrightnessUp         $exec xbacklight -inc 10
bindsym Shift+XF86MonBrightnessDown $exec xbacklight -dec 5 -steps 1
bindsym Shift+XF86MonBrightnessUp   $exec xbacklight -inc 5 -steps 1

# backlight
bindsym XF86KbdBrightnessDown   $exec sudo asus-kbd-backlight down
bindsym XF86KbdBrightnessUp     $exec sudo asus-kbd-backlight up

# volume
bindsym XF86AudioLowerVolume    $exec pactl set-sink-mute @DEFAULT_SINK@ false && amixer -qM set Master 1%-
bindsym XF86AudioRaiseVolume    $exec pactl set-sink-mute @DEFAULT_SINK@ false && amixer -qM set Master 1%+
bindsym XF86AudioMute           $exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# clipboard
bindsym $mod+c $exec clipmenu

# printscreen
set $print_xclip xclip -t image/png -selection clipboard $f
set $print_folder ~/Pictures/screenshots
set $print_scrot scrot '%Y%m%d-%H%M%S_$wx$h.png'
mode "$print" {
    bindsym Print $exec "$print_scrot -e '$print_xclip && mv $f $print_folder'", mode "default"
    bindsym space $exec "$print_scrot -ue '$print_xclip && mv $f $print_folder'", mode "default"
    bindsym --release s $exec "$print_scrot -se '$print_xclip && mv $f $print_folder'", mode "default"

    # clipboard only
    bindsym $mod+Print $exec "$print_scrot -e '$print_xclip && rm $f'", mode "default"
    bindsym $mod+space $exec "$print_scrot -ue '$print_xclip && rm $f'", mode "default"
    bindsym --release $mod+s $exec "$print_scrot -se '$print_xclip && rm $f'", mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym Print mode "$print"

# system
mode "$system" {
        bindsym l $exec ~/.config/i3/lock.sh, mode "default"
        bindsym e exec i3-msg exit, mode "default"
        bindsym s $exec systemctl suspend, mode "default"
        bindsym Shift+s exec systemctl poweroff, mode "default"
        bindsym Shift+r exec systemctl reboot, mode "default"

        # reload the configuration file
        bindsym c reload
        # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
        bindsym r restart

        bindsym Escape mode "default"
        bindsym Return mode "default"
}
bindsym $mod+Escape mode "$system"

# browser pop-ups
for_window [window_role="pop-up"] floating enable

# qalculate-gtk
for_window [class="Qalculate-gtk"] floating enable


