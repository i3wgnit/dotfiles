# brightness
bindsym XF86MonBrightnessDown       $exec backlight.sh slow down  10
bindsym XF86MonBrightnessUp         $exec backlight.sh slow up    10
bindsym Shift+XF86MonBrightnessDown $exec backlight.sh fast down  5
bindsym Shift+XF86MonBrightnessUp   $exec backlight.sh fast up    5

# backlight
bindsym XF86KbdBrightnessDown   $exec sudo asus-kbd-backlight down
bindsym XF86KbdBrightnessUp     $exec sudo asus-kbd-backlight up

# volume
bindsym XF86AudioLowerVolume        $exec volume.sh down   1
bindsym XF86AudioRaiseVolume        $exec volume.sh up     1
bindsym Shift+XF86AudioLowerVolume  $exec volume.sh down   10
bindsym Shift+XF86AudioRaiseVolume  $exec volume.sh up     10
bindsym XF86AudioMute               $exec volume.sh mute

# clipboard
bindsym $mod+c $exec CM_LAUNCHER=rofi clipmenu

# printscreen
set $print_xclip xclip -t image/png -selection clipboard
set $print_file ~/Pictures/screenshots/$(date +%Y%m%d-%H%M%S).png
mode "$print" {
    bindsym Print       $exec screenshot.sh file screen,    mode "default"
    bindsym space       $exec screenshot.sh file window,    mode "default"
    bindsym --release s $exec screenshot.sh file select,    mode "default"

    # clipboard only
    bindsym $mod+Print          $exec screenshot.sh clip screen, mode "default"
    bindsym $mod+space          $exec screenshot.sh clip window, mode "default"
    bindsym --release $mod+s    $exec screenshot.sh clip select, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym Print mode "$print"

# system
mode "$system" {
        bindsym l $exec system.sh lock, mode "default"
        bindsym e exec i3-msg exit, mode "default"
        bindsym s $exec system.sh suspend, mode "default"
        bindsym Shift+s exec system.sh Shutdown, mode "default"
        bindsym Shift+r exec system.sh Reboot, mode "default"

        # reload the configuration file
        bindsym c reload
        # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
        bindsym r restart

        bindsym Escape mode "default"
        bindsym Return mode "default"
}

bindsym $mod+Escape mode "$system"


