;bar-capacity-width = 10

; Only applies if <animation-charging> is used
;animation-charging-0 = Óàπ
;animation-charging-1 = ÓâÉ
;animation-charging-2 = ÓâÑ
;animation-charging-3 = ÓâÖ
;animation-charging-4 = ÓâÜ
;animation-charging-5 = Óâá
